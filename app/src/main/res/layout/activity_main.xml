<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C4000000">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/scanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/scannerImageView" />

    <TextView
        android:id="@+id/resultTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scannerImageView"
        android:text="Result"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="4dp"/>
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/captureImageBtn"
        android:backgroundTint="#1E8EEA"
        app:cornerRadius="10dp"
        android:layout_below="@id/resultTv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:text="Capture Image"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/detectBtn"
        android:layout_below="@id/captureImageBtn"
        android:layout_margin="20dp"
        android:text="Detect"
        android:textSize="15sp"
        android:backgroundTint="#1E8EEA"
        android:textAllCaps="false"
        app:cornerRadius="10dp"/>

</RelativeLayout>
</layout>